@page
@model IdentityProvider.Pages.User.Registration.IndexModel

<div class="auth-wrapper d-flex no-block justify-content-center">
    <div class="auth-box my-4 pb-0">
        <div>
            <div class="logo">
                <h5 class="font-medium m-b-20">ĐĂNG KÝ TÀI KHOẢN</h5>
            </div>
            <!-- Form -->
            <div class="row">
                <div class="col-12">
                    <form class="m-t-20" method="post">
                        <input type="hidden" asp-for="Input.ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Input.UserName"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ti-user"></i></span>
                                </div>
                                <input class="form-control" asp-for="Input.UserName">
                                
                            </div>
                            <span class="text-danger" asp-validation-for="Input.UserName">

                            </span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ti-lock"></i></span>
                                </div>
                                <input class="form-control" asp-for="Input.Password">
                                
                            </div>
                            <span class="text-danger" asp-validation-for="Input.Password">

                            </span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ti-lock"></i></span>
                                </div>
                                <input class="form-control" asp-for="Input.ConfirmPassword">

                            </div>
                            <span class="text-danger" asp-validation-for="Input.ConfirmPassword">

                            </span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.GivenName"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ti-text"></i></span>
                                </div>
                                <input class="form-control" asp-for="Input.GivenName">
                                
                            </div>
                            <span class="text-danger" asp-validation-for="Input.GivenName">

                            </span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.FamilyName"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ti-text"></i></span>
                                </div>
                                <input class="form-control" asp-for="Input.FamilyName">
                                
                            </div>
                            <span class="text-danger" asp-validation-for="Input.FamilyName">

                            </span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ti-email"></i></span>
                                </div>
                                <input class="form-control" asp-for="Input.Email">
                            </div>
                            <span class="text-danger" asp-validation-for="Input.Email">

                            </span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Country"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ti-world"></i></span>
                                </div>
                                <select class="form-control" asp-for="Input.Country"
                                        asp-items="@Model.Input.CountryCodes">
                                </select>
                                
                            </div>
                            <span class="text-danger" asp-validation-for="Input.Country">

                            </span>
                        </div>

                        <div class="form-group text-center">
                            <div class="col-xs-12 p-b-20">
                                <button class="btn btn-block btn-info" type="submit">Đăng ký</button>
                            </div>
                        </div>
                        <div class="form-group m-b-0 m-t-10">
                            <div class="col-sm-12 text-center">
                                Đã có tài khoản?
                                <a asp-page="/Account/Login/Index" class="text-info m-l-5">
                                    <b>Đăng nhập</b>
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
