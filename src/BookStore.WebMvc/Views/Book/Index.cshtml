
@model IEnumerable<GetBooksModel>
@{
    var type = typeof(GetBooksModel);

    var propWithValues = type.GetPropDisplayNames();
}

<div class="col-lg-2 col-md-4">
    <a class="btn waves-effect waves-light btn-block btn-info mb-2" 
            asp-action="Create"
            asp-controller="Book">
        Thêm sách
    </a>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Quản lý sách</h4>
                <h6 class="card-subtitle"></h6>
                <div class="table-responsive">
                    <table id="data-table" class="table table-striped table-bordered display">
                        <thead>
                            <tr>
                                @foreach (var propDisplayName in propWithValues.Values)
                                {
                                    <th>@propDisplayName</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#data-table').DataTable({
                serverSide: true,
                processing: true,
                paging: true,
                searching: true,
                ajax: {
                    url: '/book/search',
                    type: 'POST',
                    contentType: 'application/json',
                    data: function (d) {
                        return JSON.stringify(d);
                    },
                    dataSrc: function (json) {
                        console.log('Response from server:', json);
                        return json.data;
                    }
                },
                pageLength: 5,
                lengthMenu: [5, 10, 20, 50],
                columns: [
                    @foreach (var propName in propWithValues.Keys)
                    {
                        <text>{ data: '@propName' }, </text>
                    }
                ],
            });
        });
    </script>
}